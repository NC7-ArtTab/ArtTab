<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="arttab.server.dao.MemberDao">

    <!-- updateMember 메서드의 SQL 쿼리 정의 -->
    <update id="updateMember" parameterType="arttab.server.vo.Member">
        UPDATE member
        SET
        mem_name = #{memName},
        mem_phone = #{memPhone},
        mem_addr = #{memAddr},
        mem_detail_addr = #{memDetailAddr},
        mem_acc = #{memAcc}
        WHERE mem_no = #{memNo}
    </update>

    <!-- findBy 메서드의 SQL 쿼리 정의 -->
    <select id="findBy" parameterType="int" resultType="arttab.server.vo.Member">
        SELECT *
        FROM member
        WHERE mem_no = #{memNo}
    </select>

    <!-- getMemberBids 메서드의 SQL 쿼리 정의 -->
    <select id="getMemberBids" parameterType="int" resultType="arttab.server.vo.Bid">
        SELECT bid.bid_no, bid.art_no, bid.mem_no, bid.bid_price, bid.bid_datetime
        FROM bid
        WHERE bid.mem_no = #{memNo}
    </select>

</mapper>
